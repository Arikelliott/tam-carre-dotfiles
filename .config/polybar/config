[colors]
background = #f4fffcfd
foreground = #250E07
cpu = #E7A09E
ram = #92AED7
time = #F2D06D

[bar/tam]
width = 99%
height = 18
offset-x = .5%
offset-y = .7%
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 3
line-color = #f00
font-0 = azukifontB:pixelsize=9;1
padding = 4
modules-left = temp pad pad desktops
modules-center = windows
modules-right = cpu pad memory pad pad date
cursor-click = pointer
cursor-scroll = ns-resize

[module/windows]
type = custom/script
exec = ~/.config/polybar/scripts/windows.sh
format = <label>
label = %output%
label-padding = 1
interval = .2

[module/desktops]
type = custom/script
exec = ~/.config/polybar/scripts/desktops.sh
format = <label>
label = %output%
label-padding = 1
interval = .2

[module/temp]
format-prefix-foreground: #000000
type = custom/script
exec =  ~/.config/polybar/scripts/temp.sh
format-underline = ${colors.time}
interval=.2
click-middle = ~/.config/polybar/scripts/redtoggle.sh
click-left = ~/.config/polybar/scripts/redtoggle.sh
click-right = ~/.config/polybar/scripts/redtoggle.sh

[module/pad]
type = custom/text
content = "  "

[module/cpu]
type = internal/cpu
interval = 2
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.cpu}
label = " %percentage:2%% "

[module/memory]
type = internal/memory
interval = 2
format-prefix-foreground = ${colors.foreground}
format-underline = ${colors.ram}
label = " %percentage_used%% "

[module/date]
type = internal/date
date-alt = "%Y-%m-%d %a"
time = "%I:%M %p "
time-alt = %H:%M
format-underline = ${colors.time}
label = %date% %time%

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0


