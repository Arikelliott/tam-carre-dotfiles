# Iconize (minimize) window // Close window w/ Picom flicker workaround
super + {g,x}
    {xdotool getactivewindow windowminimize,tamwm -x}

# Launcher
super + r
    gmrun

# Screenshots
super + s
    scrot && dunstify -r 1 "Screenshot taken."

super + shift + @s
    scrot -s && dunstify -r 1 "Screenshot taken."

# run or raise (workaround atm)
super + {w,b,t,f}
    app={irc,ncmpcpp,ranger,vivaldi} && jumpapp -f -c "$app" tamwm -l $app

super + c
    jumpapp -f -c "vim" tamwm -l vim

super + q
    ~/bash_scripts/focus_extra.sh

# More run or raise
super + shift + {w}
    {jumpapp -f -c "spare" tamwm -l spare}

super + {h,l}
    tamwm -d {dprev,dnext}

super + {1-4}
    tamwm -d dnum {0-3}

super + shift + {1-5}
    tamwm -s {1-5}

ctrl + super +  {1-4}
    xdotool getactivewindow set_desktop_for_window {0-3}

super + Return
    /home/sensei/bash_scripts/init.sh
